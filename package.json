{
  "name": "vue-codemirror-plus",
  "type": "module",
  "version": "0.0.3",
  "packageManager": "pnpm@10.11.0",
  "description": "codemirror component for vue.",
  "author": "doyuli",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/doyuli/vue-codemirror-plus.git"
  },
  "keywords": [
    "vue",
    "codemirror",
    "codemirror6",
    "vue-codemirror",
    "editor",
    "syntax",
    "ide",
    "code"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "preview": "vite",
    "test": "vitest",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "postinstall": "simple-git-hooks"
  },
  "peerDependencies": {
    "codemirror": "^6.0.2",
    "vue": "^3.5.22"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.19.0",
    "@codemirror/commands": "^6.9.0",
    "@codemirror/language": "^6.11.3",
    "@codemirror/lint": "^6.9.0",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "codemirror": "^6.0.2",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^1.0.1",
    "happy-dom": "^19.0.2",
    "lint-staged": "^16.1.5",
    "picocolors": "^1.1.1",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.15.6",
    "typescript": "~5.8.0",
    "vite": "^7.1.9",
    "vitest": "^3.2.4",
    "vue": "^3.5.22"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
